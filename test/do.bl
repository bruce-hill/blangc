def SqrRet {n:Num}
def sqr_optional(n:Num):?@SqrRet
    if n < 0.
        return !SqrRet
    else
        return ?@SqrRet{n*n}

for x in [9.,-1.,-2.,-3.,-999.,4.]
    say "x = $x"
    do
        x := sqr_optional(x) or skip
        say "First: $x"
