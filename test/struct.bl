extern hypot(Num,Num):Num
def Vec {
    x,y:Num

    def len(v:Vec):Num
        return hypot(v.x, v.y)

    def plus(v:Vec, other:Vec):Vec = Vec{v.x+other.x, v.y+other.y}
    def dot(v:Vec, other:Vec):Num = v.x*other.x + v.y*other.y
    def times(v:Vec, k:Num):Vec = Vec{k*v.x, k*v.y}
    def as_string(v:Vec):String = "Vec<$(v.x),$(v.y)>"
}
// or: struct Vec{x:Num,y:Num}


v := Vec{2.3, 4.5}
say "v = $v"
say "v.x = $(v.x)"
say "v + v = $(v.plus(v))"
say "100. * v = $(v.times(100.))"
say "v * v = $(v.dot(v))"
