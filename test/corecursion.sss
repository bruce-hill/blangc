
func selfrec(i:Int)
    return unless i > 0
    say "Selfrec $i"
    selfrec(i-1)

selfrec(4)

func ping(i:Int)
    return unless i > 0
    say "Ping $i"
    pong(i-1)

func pong(i:Int)
    return unless i > 0
    say "Pong $i"
    ping(i-1)

ping(5)


func foo(x:Int)->Int
    if x == 5
        return baz(x)
    return x - 1

func baz(x:Int)->Int
    if x == 99
        return foo(x)
    return x + 1

say "$(foo(5))"
say "$(baz(99))"

