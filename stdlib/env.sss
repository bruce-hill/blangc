// Functions for manipulating the OS environment variables
func get(name:Str)->Str
    value := extern getenv(name.c_string()):CString
    return value.as_str()

func set(name:Str, value:Str, overwrite=yes)->Void
    extern setenv(name.c_string(), value.c_string(), (if overwrite then 1i32 else 0i32))

func unset(name:Str)->Void
    extern unsetenv(name.c_string())

func clear()->Void
    extern clearenv()

